# Supabase Cloud Configuration
# Get these from your Supabase project dashboard: https://app.supabase.com
SUPABASE_PROJECT_ID=your-project-id
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here
SUPABASE_ACCESS_TOKEN=your-supabase-access-token-here
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# Claude AI Configuration
CLAUDE_API_KEY=your-claude-api-key-here

# Claude Code SDK Configuration
CLAUDE_CODE_MODEL=sonnet # Options: sonnet, opus
CLAUDE_CODE_TIMEOUT=30000 # Timeout in milliseconds
CLAUDE_CODE_DEFAULT_ROLE=network-engineer # Default role for Claude Code
CLAUDE_CODE_LOG_LEVEL=error # Options: error, warn, info, debug
CLAUDE_CODE_SKIP_PERMISSIONS=false # Skip permission prompts (use with caution)
CLAUDE_CODE_ACCEPT_EDITS=false # Auto-accept file edits (use with caution)

# EXA AI Configuration
EXA_API_KEY=your-exa-api-key-here

# Device Configuration (for simulator)
DEVICE_ID=DEV-001
DEVICE_SECRET=your-device-secret-here

# Application Configuration
NODE_ENV=development

# JWT Configuration (for local auth if needed)
JWT_SECRET=your-jwt-secret-here-minimum-32-characters

# Email Configuration (for OTP)
EMAIL_FROM=noreply@zenandzen.com
EMAIL_PROVIDER=supabase

# Session Configuration
SESSION_SECRET=your-session-secret-here-minimum-32-characters

# Feature Flags
ENABLE_VOICE_SERVICE=false
ENABLE_DEVICE_SIMULATOR=true
ENABLE_AI_MOCK_MODE=false

# Monitoring (optional)
SENTRY_DSN=
LOG_LEVEL=debug

# SSL/TLS Configuration for Local Development
# These are populated by running: npm run ssl:setup
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem
SSL_CERT_HOST_PATH=./infrastructure/ssl/cert.pem
SSL_KEY_HOST_PATH=./infrastructure/ssl/key.pem

# HTTPS Configuration
HTTPS_ENABLED=false
NODE_TLS_REJECT_UNAUTHORIZED=1

# Service URLs (HTTP by default, HTTPS when SSL is enabled)
API_URL=http://localhost:3000
WEB_URL=http://localhost:3001
DEVICE_URL=http://localhost:3002
AI_URL=http://localhost:3003

# Public URLs for Next.js
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WEB_URL=http://localhost:3001
# Testing mode for Vitest: MVP or FULL
# MVP: skips non-critical UI and real-time tests
# FULL: runs the entire test suite
TEST_MODE=FULL
